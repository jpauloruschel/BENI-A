<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_new_prod_sv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginEnd="0dp"
    android:orientation="horizontal"
    tools:context="com.ufrgs.petcomp.beni.MainActivity$PlaceholderFragment">

    <GridView
        android:orientation="horizontal"
        android:layout_width="850dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_users_gvusers"
        android:padding="20dp"
        android:numColumns="4"
        android:background="#f5f5f5"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:horizontalSpacing="10dp"
        android:drawSelectorOnTop="false"
        android:layout_below="@+id/editText"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="6dp"
        android:maxLines="1"
        android:inputType="text|textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:text="Search: "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editText"
        android:gravity="center"
        android:inputType="text|textPersonName" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@android:drawable/ic_menu_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/frag_users_gvusers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/frag_users_lvtests"
        android:background="#c6c6c6" />

</RelativeLayout>

        </LinearLayout>
    </ScrollView>